<div class="container p-3">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>投稿編集</h1>
            <%= form_with model: @post, url: post_path(@post.id), method: :patch, html: { multipart: true } do |f| %>
              <div class="form-group">
                <label for="post_body" class="form-label">投稿文</label>
                <%= f.text_area :post, id: "post_body", class: "form-control post_body" %>
              </div>
              <div class="form-group">
                <label for="post_image" class="form-label">画像アップロード</label>
                <%= f.file_field :image %>
              </div>
              <div class="form-group">
                <label for="post_video" class="form-label">動画アップロード</label>
                <%= f.file_field :video %>
              </div>
              <div class="form-group">
                <%= f.submit "編集完了", class: "btn btn-success mb-3" %>
              </div>
            <% end %>
            <a href="/posts/<%= @post.id %>">Show</a> | <a href="/posts">Back</a>
        </div>
    </div>
</div>
