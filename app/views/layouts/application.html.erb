<!DOCTYPE html>
<html>
  <head>
    <title>GAMEShare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/37b4bbcd03.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-info">
        <div class="container-fluid">
          <% if user_signed_in? %>
          <a class="navbar-brand text-dark" href="/mypage">
            <strong>
              <i class="fa-brands fa-phoenix-framework"></i>
              <span>GAMEShare</span>
            </strong>
          </a>
          <% else %>
          <a class="navbar-brand text-dark" href="/">
            <strong>
              <i class="fa-brands fa-phoenix-framework"></i>
              <span>GAMEShare</span>
            </strong>
          </a>
          <% end %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <% if user_signed_in? %>
              <strong>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
                </li>
              </strong>
              <strong>
                <li class="nav-item">
                  <%= link_to "一覧", posts_path, class: 'nav-link text-dark' %>
                </li>
              </strong>
              <% else %>
              <strong>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark'%>
                </li>
              </strong>
              <strong>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark'%>
                </li>
              </strong>
              <strong>
                <li class="nav-item">
                  <%= link_to "ゲストログイン", users_guest_sign_in_path, class: 'nav-link text-dark'%>
                </li>
              </strong>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
